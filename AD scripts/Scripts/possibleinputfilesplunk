# Monitor Active Directory Logs
[monitor://C:\Windows\debug\Ntds\*.log]
disabled = false
sourcetype = WinEventLog:Security
index = main

# Monitor DNS Server Logs
[monitor://C:\Windows\System32\winevt\Logs\Microsoft-Windows-DNSServer%4Analytical.etl]
disabled = false
sourcetype = WinEventLog:Microsoft-Windows-DNSServer-Analytical
index = main

# Monitor DHCP Server Logs
[monitor://C:\Windows\System32\dhcp\DhcpSrvLog-*.log]
disabled = false
